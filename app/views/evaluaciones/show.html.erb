<%- model_class = Evaluacion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:estudiante_id) %>:</strong></dt>
  <dd><%= @evaluacion.estudiante_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:jefe_id) %>:</strong></dt>
  <dd><%= @evaluacion.jefe_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_inicio) %>:</strong></dt>
  <dd><%= @evaluacion.fecha_inicio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_fin) %>:</strong></dt>
  <dd><%= @evaluacion.fecha_fin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_evaluacion) %>:</strong></dt>
  <dd><%= @evaluacion.fecha_evaluacion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aspectos_positivos) %>:</strong></dt>
  <dd><%= @evaluacion.aspectos_positivos %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aspectos_negativos) %>:</strong></dt>
  <dd><%= @evaluacion.aspectos_negativos %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              evaluaciones_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_evaluacion_path(@evaluacion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              evaluacion_path(@evaluacion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
