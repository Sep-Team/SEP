<%= simple_form_for @evaluacion, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group" >
    <label class="control-label" for="inputName">Estudiante</label>
      <div class="controls ">
        <%= f.collection_select :estudiante_id, Estudiante.all, :id, :nombre1, :prompt => "Selecione Estudiante" %> 
      </div>
  </div>
   <div class="control-group" >
    <label class="control-label" for="inputName">Jefes</label>
      <div class="controls ">
        <%= f.collection_select :jefe_id, Jefe.all, :id, :nombres, :prompt => "Selecione Jefes" %> 
      </div>
  </div>
  <%= f.input :fecha_inicio %>
  <%= f.input :fecha_evaluacion %>
  <%= f.input :aspectos_positivos %>
  <%= f.input :aspectos_negativos %>
   <%= f.input :fecha_fin %>

  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                evaluaciones_path, :class => 'btn' %>
  </div>
<% end %>
