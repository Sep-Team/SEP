<%- model_class = Evaluacion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:estudiante_id) %></th>
      <th><%= model_class.human_attribute_name(:jefe_id) %></th>
      <th><%= model_class.human_attribute_name(:fecha_inicio) %></th>
      <th><%= model_class.human_attribute_name(:fecha_fin) %></th>
      <th><%= model_class.human_attribute_name(:fecha_evaluacion) %></th>
      <th><%= model_class.human_attribute_name(:aspectos_positivos) %></th>
      <th><%= model_class.human_attribute_name(:aspectos_negativos) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @evaluaciones.each do |evaluacion| %>
      <tr>
        <td><%= link_to evaluacion.id, evaluacion_path(evaluacion) %></td>
        <td><%= evaluacion.estudiante_id %></td>
        <td><%= evaluacion.jefe_id %></td>
        <td><%= evaluacion.fecha_inicio %></td>
        <td><%= evaluacion.fecha_fin %></td>
        <td><%= evaluacion.fecha_evaluacion %></td>
        <td><%= evaluacion.aspectos_positivos %></td>
        <td><%= evaluacion.aspectos_negativos %></td>
        <td><%=l evaluacion.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_evaluacion_path(evaluacion), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      evaluacion_path(evaluacion),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_evaluacion_path,
            :class => 'btn btn-primary' %>
