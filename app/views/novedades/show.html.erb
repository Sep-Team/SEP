<%- model_class = Novedad -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fecha_ocurrencia) %>:</strong></dt>
  <dd><%= @novedad.fecha_ocurrencia %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @novedad.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:implicados) %>:</strong></dt>
  <dd><%= @novedad.implicados %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @novedad.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:actEstado_id) %>:</strong></dt>
  <dd><%= @novedad.actEstado_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              novedades_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_novedad_path(@novedad), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              novedad_path(@novedad),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
