<%= simple_form_for @novedad, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :fecha_ocurrencia %>
  <%= f.input :implicados %>
  <%= f.input :user_id %>
  <div class="control-group" >
    <label class="control-label" for="inputName">ActoEstado</label>
    <div class="controls ">
      <%= f.collection_select :actEstado_id , Actestado.all, :id, :nombre, :prompt => "Selecione ActEstado", :input_html => {:class => "col-sm-2"} %> 
    </div>
  </div>
   <%= f.input :descripcion %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                novedades_path, :class => 'btn' %>
  </div>
<% end %>
