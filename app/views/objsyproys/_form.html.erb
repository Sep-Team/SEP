<%= simple_form_for @objsyproy, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombre %>
  <%= f.input :descripcion %>
  <div class="control-group" >
    <label class="control-label" for="inputName">Departamentos</label>
    <div class="controls ">

      <%= f.collection_select :departamento_id, Departamento.all, :id, :nombre, :prompt => "Selecione Departamento", :input_html => {:class => "col-sm-2"} %> 
   </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                objsyproys_path, :class => 'btn' %>
  </div>
<% end %>
