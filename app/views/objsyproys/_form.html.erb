<%= simple_form_for(@objsyproy, :html => { :multipart => true, :remote => true }) do |f| %>
 <div class="user">
    <div class="modal-header">
       <a href="#" class="close"   onclick="$.lazybox.close()">&times;</a>
      <h4 class="modal-title"><h3>Datos Objetivo P</h3></h4>
        </div><br>
          <div class="row">
            <div class="col-md-4">
             Nombre:
            </div>
            <div class="col-md-6">
              <%= f.input :nombre, :label => false,  :required => true %>
            </div>
            <div class="col-md-4">
              Departamento:
            </div>
            <div class="col-md-6">
                <%= f.collection_select :departamento_id, Departamento.all, :id, :nombre, :prompt => "Selecione Departamento", :label => false,  :required => true %></br></br>
            </div>
            <div class="col-md-4">
             Descripciones:
            </div>
            <div class="col-md-6">
              <%= f.input :descripcion, :label => false,  :required => true %>
            </div>
        </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
  </div>
<% end %>
