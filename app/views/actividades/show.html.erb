<%- model_class = Actividade -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fecha_inicio) %>:</strong></dt>
  <dd><%= @actividade.fecha_inicio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_fin) %>:</strong></dt>
  <dd><%= @actividade.fecha_fin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @actividade.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:categoria_id) %>:</strong></dt>
  <dd><%= @actividade.categoria_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:objsyproy_id) %>:</strong></dt>
  <dd><%= @actividade.objsyproy_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estudiante_id) %>:</strong></dt>
  <dd><%= @actividade.estudiante_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:actEstado_id) %>:</strong></dt>
  <dd><%= @actividade.actEstado_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              actividades_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_actividade_path(@actividade), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              actividade_path(@actividade),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
