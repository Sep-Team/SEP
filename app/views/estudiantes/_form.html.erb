<%= simple_form_for @estudiante, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombre1 %>
  <%= f.input :nombre2 %>
  <%= f.input :apellido1 %>
  <%= f.input :apellido2 %>
  <%= f.input :genero %>
  <%= f.input :documento %>
  <div class="control-group" >
    <label class="control-label" for="inputName">Fichas</label>
      <div class="controls ">
        <%= f.collection_select :ficha_id, Ficha.all, :id, :numero, :prompt => "Selecione Fichas", :input_html => {:class => "col-sm-2"} %> 
      </div>
  </div>
  <div class="control-group" >
    <label class="control-label" for="inputName">Jefes</label>
    <div class="controls ">
      <%= f.collection_select :jefe_id, Jefe.all, :id, :nombres, :prompt => "Selecione Jefes", :input_html => {:class => "col-sm-2"} %> 
    </div>
  </div>
  <div class="control-group" >
    <label class="control-label" for="inputName">Tipo Documento</label>
    <div class="controls ">

      <%= f.collection_select :tipodoc_id, Tipodoc.all, :id, :sigla, :prompt => "Selecione Tipo Documento", :input_html => {:class => "col-sm-2"} %> 
   </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                estudiantes_path, :class => 'btn' %>
  </div>
<% end %>
