<%- model_class = Estudiante -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre1) %>:</strong></dt>
  <dd><%= @estudiante.nombre1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre2) %>:</strong></dt>
  <dd><%= @estudiante.nombre2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apellido1) %>:</strong></dt>
  <dd><%= @estudiante.apellido1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apellido2) %>:</strong></dt>
  <dd><%= @estudiante.apellido2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:genero) %>:</strong></dt>
  <dd><%= @estudiante.genero %></dd>
  <dt><strong><%= model_class.human_attribute_name(:documento) %>:</strong></dt>
  <dd><%= @estudiante.documento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ficha_id) %>:</strong></dt>
  <dd><%= @estudiante.ficha_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:jefe_id) %>:</strong></dt>
  <dd><%= @estudiante.jefe_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipodoc_id) %>:</strong></dt>
  <dd><%= @estudiante.tipodoc_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              estudiantes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_estudiante_path(@estudiante), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              estudiante_path(@estudiante),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
