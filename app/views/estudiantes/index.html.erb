<%- model_class = Estudiante -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre1) %></th>
      <th><%= model_class.human_attribute_name(:nombre2) %></th>
      <th><%= model_class.human_attribute_name(:apellido1) %></th>
      <th><%= model_class.human_attribute_name(:apellido2) %></th>
      <th><%= model_class.human_attribute_name(:genero) %></th>
      <th><%= model_class.human_attribute_name(:documento) %></th>
      <th><%= model_class.human_attribute_name(:ficha_id) %></th>
      <th><%= model_class.human_attribute_name(:jefe_id) %></th>
      <th><%= model_class.human_attribute_name(:tipodoc_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @estudiantes.each do |estudiante| %>
      <tr>
        <td><%= link_to estudiante.id, estudiante_path(estudiante) %></td>
        <td><%= estudiante.nombre1 %></td>
        <td><%= estudiante.nombre2 %></td>
        <td><%= estudiante.apellido1 %></td>
        <td><%= estudiante.apellido2 %></td>
        <td><%= estudiante.genero %></td>
        <td><%= estudiante.documento %></td>
        <td><%= estudiante.ficha_id %></td>
        <td><%= estudiante.jefe_id %></td>
        <td><%= estudiante.tipodoc_id %></td>
        <td><%=l estudiante.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_estudiante_path(estudiante), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      estudiante_path(estudiante),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_estudiante_path,
            :class => 'btn btn-primary' %>
