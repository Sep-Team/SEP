<%= form_for @user do |f| %>
   <div class="control-group" >
    <label class="control-label" for="inputName">Username</label>
      <div class="controls ">
     
      <%= f.text_field :username %>
      </div>
  </div>
   <div class="control-group" >
    <label class="control-label" for="inputName">Email</label>
      <div class="controls ">
         <%= f.text_field :email %>
      </div>
  </div>
   <div class="control-group" >
    <label class="control-label" for="inputName">Password</label>
      <div class="controls ">
         <%= f.password_field :password %>
      </div>
  </div>
   <div class="control-group" >
    <label class="control-label" for="inputName">ConfirmarPassword</label>
      <div class="controls ">
       <%= f.password_field :password_confirmation %>
      </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
