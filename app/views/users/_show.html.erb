<div class="user">

      <div class="modal-header">
           <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
           <h4 class="modal-title">Asociado</h4>
      </div>

      <div class="modal-body">
           <div class="col-md-12">
              <div class="row">
                  <div class="col-md-12">
