                  </div>
              </div>
              <br/>
              <div class="row">
                  <div class="col-md-3"><strong>Nombre:</strong></div>
                  <div class="col-md-9">
                       <%= @user.username %>
                  </div>
              </div>
              <div class="row">
                  <div class="col-md-3"><strong>Telefono:</strong></div>
                  <div class="col-md-9">
                       <%= @user.telefono %>
                  </div>
              </div>
              <div class="row">
                  <div class="col-md-3"><strong>Celular:</strong></div>
                  <div class="col-md-9">
                       <%= @user.celular %>
                  </div>
              </div>
              <div class="row">
                  <div class="col-md-3"><strong>Correo:</strong></div>
                  <div class="col-md-9">
                       <%= @user.email %>
                  </div>
              </div>
              <div class="row">
                  <div class="col-md-3"><strong>Criadero:</strong></div>
                  <div class="col-md-9">
                       <%= @user.criadero %>
                  </div>
              </div>
              <div class="row">
                   <div class="col-md-3"><strong>Ciudad:</strong></div>
                   <div class="col-md-9">
                       <%= @user.ciudad %>
                  </div>
              </div>
