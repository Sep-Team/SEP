<%= simple_form_for @jefe, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :nombres, :class => "col-md-2"%>
  <%= f.input :apellidos %>
  <%= f.input :cargo %>
  <%= f.input :telefono %>
  <%= f.input :email %>
  <%= f.input :empresa_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                jefes_path, :class => 'btn' %>
  </div>
<% end %>
