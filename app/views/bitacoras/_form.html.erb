<%= javascript_include_tag "fecha" %>
<%= simple_form_for @bitacora, :html => { :class => 'form-horizontal' } do |f| %>
 
 <div class="modal-body">
   <div class="bitacora">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true"        onclick="$.lazybox.close()">x
      </button>  
      <h3>Bitacora</h3></br></br>
      <ul class="nav nav-tabs">
        <li class="active">
          <div class="col-md-12">
            <%= f.collection_select :estudiante_id,  Estudiante.all, :id, :nombre1, :prompt => "Selecione Estudiantes" %>
          </div>
        </li>
        <li class="active">
          <div class="col-md-10">
            <%= f.input :fecha_inicio, :label => "", :as => :string, :input_html => {  :class => "datepicker " } %>
          </div>
        </li>
        <li class="active">
          <div class="col-md-10">
            <%= f.input :fecha_fin, :as => :string, :required => true,  :input_html => {  :class => "datepicker" } %>
          </div>
        </li>
        </ul></br></br>
          <div class="col-md-8">
            <%= f.input :nombreproyecto,  :required => true  %>
          </div>          
          <div class="col-md-8">
            <%= f.input :nombre, :label => "NombreActividad",  :required => true %>
          </div>          
          <div class="col-md-8">
            <%= f.input :objetivo ,  :required => true %>
          </div>
          <div class="col-md-8">
           <%= f.input :descripcion , :required => true %>
          </div>
          <div class="col-md-8">
            <%= f.collection_select :categoria_id, Categoria.all, :id, :nombre, :prompt => "Selecione Categoria" %></br></br>
          </div>
          <div class="col-md-8">
            <%= f.collection_select :actestado_id , Actestado.all, :id, :nombre, :prompt => "Selecione ActEstado" %></br></br>
          </div>
          <div class="col-md-8">
            <%= f.collection_select :actestado_id , Actestado.all, :id, :nombre, :prompt => "Selecione ActEstado" %></br></br>
          </div>
        </div>
      </div> 
  <div class="modal-footer">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
  </div>
<% end %>

